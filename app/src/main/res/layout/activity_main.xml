<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.dell.broadcastpractice.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/showMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            />

        <Button
            android:id="@+id/localBroadcastBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Local Broadcast"
            android:onClick="sendBroadcast"/>

        <Button
            android:id="@+id/globalBroadcastBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Global Broadcast1"
            android:onClick="sendBroadcast"/>
        <Button
            android:id="@+id/globalBroadcastBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Global Broadcast2"
            android:onClick="sendBroadcast"/>
    </LinearLayout>

</layout >

